<launch>
  <!--<param name="use_sim_time" value="true"/>-->
  <arg name="namespace_prefix" default="robot5"/>

  <node pkg="velodyne_pointcloud" type="cloud_node" name="cloud_node">
    <param name="calibration" value="$(find lidar_object_detection)/config/vlp16.yaml"/>
    <param name="min_range" value="0.4"/>
    <param name="max_range" value="130.0"/>
  </node>
  
  <node pkg="velodyne_pointcloud" type="cloud_node" name="convert_veloscans">
     <param name="calibration" value="$(find lidar_object_detection)/config/vlp16.yaml"/>
    <param name="min_range" value="0.4"/>
    <param name="max_range" value="130.0"/>
    <remap from="/velodyne_packets" to="/$(arg namespace_prefix)/sensors/velodyne_packets"/>
    <remap from="/velodyne_points" to="/$(arg namespace_prefix)/sensors/velodyne_points"/>
  </node>
  
  <!-- FLOBOT 3D Object Detector -->
  <node pkg="lidar_object_detection" name="adaptive_clustering" type="adaptive_clustering">
    <param name="sensor_model" value="VLP-16"/>
    <param name="frame_id" type="string" value="$(arg namespace_prefix)/velodyne"/> <!-- /fuser_laser_link, /graph_node/point2_fuser-->
    <param name="velodyne_topic" type="string" value="/$(arg namespace_prefix)/sensors/velodyne_points"/> 
    <param name="z_axis_min" value="-0.9"/>
    <param name="object_size_limit" value="true"/>
    <param name="print_fps" value="true"/>
  </node>

  <!-- Deep Net Inference NOde -->
  <node pkg="lidar_object_detection" type="inference_node.py" name="inference_node" output="screen" respawn="false">
    <param name="tf_model_path" value="$(find lidar_object_detection)/script/ncfm_demo"/>
    <param name="velodyne_topic" type="string" value="/$(arg namespace_prefix)/sensors/velodyne_points"/> 
    <param name="frame_id" type="string" value="$(arg namespace_prefix)/velodyne"/> 
    <param name="target_frame" type="string" value="$(arg namespace_prefix)/odom"/> 
  </node>

  <!-- NBellotto's Bayes People Tracker -->
  <!--<rosparam command="load" file="$(find adaptive_clustering)/config/object3d_detector_ncfm.yaml"/>
  <node pkg="bayes_people_tracker" type="bayes_people_tracker" name="bayes_people_tracker" output="screen" respawn="false">
    <param name="base_link" type="string" value="velodyne"/>
    <param name="target_frame" type="string" value="world"/>
  </node>-->
  
  <!-- ROS Visualization -->
  <!--<node pkg="rviz" type="rviz" name="rviz" args="-d $(find lidar_object_detection)/config/object3d_detector_ncfm.rviz"/>-->
</launch>
